<odoo>

    <record id="view_mrp_product_produce_wizard_inherit" model="ir.ui.view">
        <field name="name">MRP Product Produce Inherit</field>
        <field name="model">mrp.product.produce</field>
        <field name="inherit_id" ref="mrp.view_mrp_product_produce_wizard"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='raw_workorder_line_ids']//tree" position="inside">
                <field name="size_of_pieces" optional="show"/>
            </xpath>
            
            <xpath expr="//field[@name='finished_workorder_line_ids']//tree" position="inside">
                <field name="size_of_pieces" optional="show"/>
            </xpath>
            
            <xpath expr="//form/group/group/field[@name='product_id']" position="after">
                <field name="quantity_difference" decoration-danger="qty_producing&lt;10" decoration-success="qty_producing==10" decoration-info="qty_producing&gt;10"/>
            </xpath>

        </field>
    </record>
</odoo>
